global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets:
          - '{{ exporter_host1 }}:9100'
          - '{{ exporter_host2 }}:9100'

  - job_name: 'nginx_log_exporter'
    static_configs:
      - targets:
          - '{{ exporter_host1 }}:4040'
          - '{{ exporter_host2 }}:4040'
